<?xml version="1.0" encoding="UTF-8"?>
<robot name="ar_gripper"
  xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="ar_gripper" params="tf_prefix sim:=false">

    <!-- Workaround for https://github.com/ros-controls/gz_ros2_control/issues/165 -->
    <xacro:property name="FINGER_LOWER_LIMIT" value="0.0" />
    <xacro:property name="FINGER_UPPER_LIMIT" value="0.05" />
    <xacro:property name="FINGER_ADJUSTED_LOWER_LIMIT" value="${FINGER_LOWER_LIMIT - 0.01}" />
    <xacro:property name="FINGER_ADJUSTED_UPPER_LIMIT" value="${FINGER_UPPER_LIMIT + 0.01}" />

    <material name="${tf_prefix}Black">
      <color rgba="0.1 0.1 0.1 0.99"/>
    </material>

    <!-- link list -->
    <link name="${tf_prefix}ar_gripper_adapter">
      <visual>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/adapter.stl"/>
        </geometry>
        <origin rpy="0.0 0.0 0.0" xyz="0 0 0"/>
        <material name="${tf_prefix}Black">
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/adapter.stl"/>
        </geometry>
        <origin rpy="0.0 0.0 0.0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.040" />
        <!-- These numbers are not correct -->
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <link name="${tf_prefix}ar_gripper_body">
      <visual>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/body.stl"/>
        </geometry>
        <origin rpy="0.0 0.0 0.0" xyz="0 0 0"/>
        <material name="${tf_prefix}Black">
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/body.stl"/>
        </geometry>
        <origin rpy="0.0 0.0 0.0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.400" />
        <!-- These numbers are not correct -->
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <link name="${tf_prefix}ar_gripper_finger1">
      <visual>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/finger.stl"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="${tf_prefix}Black">
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/finger.stl"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.040"/>
        <!-- These numbers are not correct -->
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <link name="${tf_prefix}ar_gripper_finger2">
      <visual>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/finger.stl"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="${tf_prefix}Black">
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ar_gripper/meshes/finger.stl"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.040"/>
        <!-- These numbers are not correct -->
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>

    <!-- joint list -->
    <joint name="${tf_prefix}adapter_ar_gripper_body" type="fixed">
      <parent link="${tf_prefix}ar_gripper_adapter"/>
      <child link="${tf_prefix}ar_gripper_body"/>
      <axis xyz="0 0 0"/>
      <origin rpy="0 0 0" xyz="0 0 0.006"/>
    </joint>

    <joint name="${tf_prefix}ar_gripper_body_finger1" type="prismatic">
      <limit effort="1000.0" lower="${FINGER_ADJUSTED_LOWER_LIMIT}" upper="${FINGER_ADJUSTED_UPPER_LIMIT}" velocity="0.0031"/>
      <parent link="${tf_prefix}ar_gripper_body"/>
      <child link="${tf_prefix}ar_gripper_finger1"/>
      <axis xyz="-1 0 0"/>
      <origin rpy="0 0 0" xyz="0.0 0 0.0756"/>
      <dynamics damping="0.3" />
    </joint>

    <joint name="${tf_prefix}ar_gripper_body_finger2" type="prismatic">
      <limit effort="1000.0" lower="${FINGER_ADJUSTED_LOWER_LIMIT}" upper="${FINGER_ADJUSTED_UPPER_LIMIT}" velocity="0.0031"/>
      <parent link="${tf_prefix}ar_gripper_body"/>
      <child link="${tf_prefix}ar_gripper_finger2"/>
      <axis xyz="-1 0 0"/>
      <mimic joint="${tf_prefix}ar_gripper_body_finger1" multiplier="1.0" offset="0.0" />
      <origin rpy="0 0 ${pi}" xyz="0.0 0 0.0756"/>
      <dynamics damping="0.3" />
    </joint>

  </xacro:macro>
</robot>
